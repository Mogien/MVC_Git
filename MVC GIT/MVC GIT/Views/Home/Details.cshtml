@model MVC_GIT.Models.Order
@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Title</h2>


<div>

    <h2>@Model.CustomerName</h2>
    <div class="row">
        <div class="col-lg-2">
            Order No: @Html.DisplayFor(model => model.OrderNo)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            Order Date:  @Html.DisplayFor(model => model.OrderDate)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            Total Amount: @Html.DisplayFor(model => model.TotalAmount)
        </div>
    </div>
    <br /><br /><br />
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>